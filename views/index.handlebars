<h1>Budget App</h1>

<h2>e-PocketBook</h2>

<ul>
  {{#each budget}}
      {{> budget/budget-block}}
  {{/each}}
</ul>


<h2>Add a Line Item</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Desc:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="amount">Amount:</label>
    <input type="text" id="amount" name="amount">
  </div>

  <div class="form-group">
    <label for="expense">Type</label><br>
    <input type="radio" id="income" value="1"> Income<br>
    <input type="radio" id="expense" value="1"> Expense<br>
  </div>

  <button type="submit">Submit</button>
</form>
